{
  "name": "minisuper-customer-webapp-ui",
  "version": "0.1.0",
  "private": true,
  "homepage": "https://minisuper.app/comprar/",
  "scripts": {
    "start": "webpack-dev-server --config webpack.config.dev.js --port 8080",
    "test": "echo \"run jest --watch\"",
    "test:ci": "echo \"run jest\"",
    "clean:build": "rimraf ./build && mkdir build",
    "prebuild": "run-p clean:build test:ci",
    "build": "webpack --config webpack.config.prod.js"
  },
  "dependencies": {
    "axios": "^0.18.0",
    "bluebird": "^3.7.2",
    "connected-react-router": "^6.8.0",
    "cross-env": "^5.2.0",
    "eslint-loader": "2.1.2",
    "history": "4.10.1",
    "html-webpack-plugin": "^4.3.0",
    "http-server": "^0.12.1",
    "lodash.get": "^4.4.2",
    "lodash.keyby": "^4.6.0",
    "lodash.tolower": "^4.1.2",
    "logrocket": "^1.0.12",
    "mapbox-gl": "^1.11.1",
    "mini-css-extract-plugin": "^0.9.0",
    "query-string": "^6.13.1",
    "ramda": "^0.26.1",
    "react": "16.8.4",
    "react-dom": "16.8.4",
    "react-redux": "6.0.1",
    "react-router-dom": "5.0.0",
    "redux": "^4.0.5",
    "redux-immutable-state-invariant": "^2.1.0",
    "redux-saga": "^1.1.3",
    "seamless-immutable": "^7.1.4",
    "socket.io-client": "^2.2.0",
    "styled-components": "^5.1.1",
    "webpack": "^4.43.0",
    "webpack-bundle-analyzer": "^3.8.0",
    "webpack-cli": "3.3.0",
    "webpack-dev-server": "3.2.1"
  },
  "devDependencies": {
    "@babel/core": "7.3.4",
    "babel-eslint": "10.0.1",
    "babel-loader": "8.0.5",
    "babel-preset-react-app": "7.0.2",
    "compression-webpack-plugin": "^6.0.0",
    "css-loader": "2.1.1",
    "cssnano": "4.1.10",
    "eslint": "5.15.2",
    "eslint-loader": "2.1.2",
    "eslint-plugin-import": "2.16.0",
    "eslint-plugin-react": "7.12.4",
    "file-loader": "^6.0.0",
    "npm-run-all": "4.1.5",
    "postcss-loader": "3.0.0",
    "style-loader": "0.23.1"
  },
  "engines": {
    "node": ">=8"
  },
  "babel": {
    "presets": [
      "babel-preset-react-app"
    ]
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "plugin:react/recommended",
      "plugin:import/errors",
      "plugin:import/warnings"
    ],
    "parser": "babel-eslint",
    "parserOptions": {
      "ecmaVersion": 2018,
      "sourceType": "module",
      "ecmaFeatures": {
        "jsx": true
      }
    },
    "env": {
      "browser": true,
      "node": true,
      "es6": true,
      "jest": true
    },
    "rules": {
      "no-debugger": "warn",
      "no-console": [
        "warn",
        {
          "allow": [
            "warn",
            "error"
          ]
        }
      ],
      "no-unused-vars": "warn",
      "react/prop-types": "off",
      "import/no-unresolved": "off",
      "import/no-named-as-default": "off"
    },
    "settings": {
      "react": {
        "version": "detect"
      }
    },
    "root": true
  }
}
